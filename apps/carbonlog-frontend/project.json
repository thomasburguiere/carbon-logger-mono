{
  "name": "carbonlog-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/carbonlog-frontend/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/carbonlog-frontend",
        "index": "apps/carbonlog-frontend/src/index.html",
        "main": "apps/carbonlog-frontend/src/main.ts",
        "polyfills": "apps/carbonlog-frontend/src/polyfills.ts",
        "tsConfig": "apps/carbonlog-frontend/tsconfig.app.json",
        "assets": [
          "apps/carbonlog-frontend/src/favicon.ico",
          "apps/carbonlog-frontend/src/assets"
        ],
        "styles": [
          "apps/carbonlog-frontend/src/styles.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/carbonlog-frontend/src/environments/environment.ts",
              "with": "apps/carbonlog-frontend/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "carbonlog-frontend:build:production"
        },
        "development": {
          "browserTarget": "carbonlog-frontend:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "carbonlog-frontend:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/carbonlog-frontend/**/*.ts",
          "apps/carbonlog-frontend/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/carbonlog-frontend/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
