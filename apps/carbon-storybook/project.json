{
  "name": "carbon-storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/carbon-storybook/src",
  "prefix": "crb",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/carbon-storybook",
        "index": "apps/carbon-storybook/src/index.html",
        "main": "apps/carbon-storybook/src/main.ts",
        "polyfills": "apps/carbon-storybook/src/polyfills.ts",
        "tsConfig": "apps/carbon-storybook/tsconfig.app.json",
        "assets": [
          "apps/carbon-storybook/src/favicon.ico",
          "apps/carbon-storybook/src/assets"
        ],
        "styles": [
          "apps/carbon-storybook/src/styles.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/carbon-storybook/src/environments/environment.ts",
              "with": "apps/carbon-storybook/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/carbon-storybook/**/*.ts",
          "apps/carbon-storybook/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/carbon-storybook/.storybook",
        "browserTarget": "carbon-storybook:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": [
        "{options.outputDir}"
      ],
      "options": {
        "outputDir": "dist/storybook/carbon-storybook",
        "configDir": "apps/carbon-storybook/.storybook",
        "browserTarget": "carbon-storybook:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
