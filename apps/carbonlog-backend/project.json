{
  "name": "carbonlog-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/carbonlog-backend/src",
  "targets": {
    "build": {
      "executor": "@jnxplus/nx-boot-gradle:build",
      "options": {
        "packaging": "jar"
      }
    },
    "build-image": {
      "executor": "@jnxplus/nx-boot-gradle:build-image"
    },
    "serve-atlas": {
      "executor": "@jnxplus/nx-boot-gradle:serve",
      "options": {
        "args": "--spring.profiles.active=local,mongo-atlas --server.port=18080"
      }
    },
    "serve-docker": {
      "executor": "@jnxplus/nx-boot-gradle:serve",
      "options": {
        "args": "--spring.profiles.active=local,mongo-docker --server.port=18080"
      }
    },
    "lint": {
      "executor": "@jnxplus/nx-boot-gradle:lint",
      "options": {
        "linter": "ktlint"
      }
    },
    "test": {
      "executor": "@jnxplus/nx-boot-gradle:test"
    },
    "kformat": {
      "executor": "@jnxplus/nx-boot-gradle:kformat"
    }
  },
  "tags": []
}
